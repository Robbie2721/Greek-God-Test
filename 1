import math

Zeus = 0
Hera = 0
Aphrodite = 0
Apollo = 0
Ares = 0
Artemis = 0
Athena = 0
Hades = 0
Hermes = 0
Poseidon = 0
Demeter = 0
Hephaestus = 0


q1 = int(input("Which one of these is your favorite animal? Eagle(1), Lion(2), Owl(3), Crow(4), Fish(5), Cow(6), or None(7):"))
if q1 == 1:
    Zeus = Zeus + 3
    Hera = Hera + 1
elif q1 == 2:
    Ares = Ares + 3
elif q1 == 3:
    Athena = Athena + 3
elif q1 == 4:
    Hades = Hades + 3
elif q1 == 5:
    Poseidon = Poseidon + 3
elif q1 == 6:
    Apollo = Apollo + 3
elif q1 == 7:
    Hephaestus = Hephaestus + 1
else: 
    print("Invalid Response, Try Restarting")
q2 = int(input("Which of these describes you best? Funny(1), Serious(2), Smart(3), or Crafty(4)"))#finish here
