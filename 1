gods = {
    "Zeus": Zeus,
    "Hera": Hera,
    "Aphrodite": Aphrodite,
    "Apollo": Apollo,
    "Ares": Ares,
    "Artemis": Artemis,
    "Athena": Athena,
    "Hades": Hades,
    "Hermes": Hermes,
    "Poseidon": Poseidon,
    "Demeter": Demeter,
    "Hephaestus": Hephaestus
}

youAre = max(gods, key=gods.get)

print("You are the god " + youAre)
